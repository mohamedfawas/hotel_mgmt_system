###############################
# Application Configuration
###############################

# Environment the app runs in: development | staging | production
APP_ENVIRONMENT=development


###############################
# HTTP Server Configuration
###############################

# Port on which the HTTP server listens
APP_HTTP_PORT=8080

# Request timeout values in seconds
APP_HTTP_READ_TIMEOUT=15
APP_HTTP_WRITE_TIMEOUT=15
APP_HTTP_IDLE_TIMEOUT=60


###############################
# PostgreSQL Configuration
###############################

# Database connection settings
APP_POSTGRES_HOST=localhost
APP_POSTGRES_PORT=5432
APP_POSTGRES_USER=postgres
APP_POSTGRES_PASSWORD=postgres
APP_POSTGRES_DBNAME=mydb

# SSL mode: disable | require | verify-ca | verify-full
APP_POSTGRES_SSLMODE=disable

# Timezone for DB connection
APP_POSTGRES_TIMEZONE=UTC


###############################
# Redis Configuration
###############################

# Redis server settings
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379

# Redis password (leave empty if none)
APP_REDIS_PASSWORD=

# Redis database index (0â€“15)
APP_REDIS_DB=0
